generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trips     Trip[]
}

model Country {
  id         String     @id @default(uuid())
  name       String
  name_en    String
  flag_img   String?    @db.VarChar(500)
  currencies Currency[]
  trips      Trip[]
}

model Currency {
  id        String   @id @default(uuid())
  name      String
  countryId String
  budgets   Budget[]
  Country   Country  @relation(fields: [countryId], references: [id])

  @@index([countryId], map: "Currency_countryId_fkey")
}

model Trip {
  id        String    @id @default(uuid())
  title     String
  startedAt DateTime
  endedAt   DateTime
  userId    String
  countryId String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  budgets   Budget[]
  expenses  Expense[]
  incomes   Income[]
  Country   Country   @relation(fields: [countryId], references: [id])
  User      User      @relation(fields: [userId], references: [id])

  @@index([countryId], map: "Trip_countryId_fkey")
  @@index([userId], map: "Trip_userId_fkey")
}

model Budget {
  id         String    @id @default(uuid())
  title      String
  type       String
  tripId     String
  currencyId String
  Currency   Currency  @relation(fields: [currencyId], references: [id])
  Trip       Trip      @relation(fields: [tripId], references: [id])
  expenses   Expense[]
  incomes    Income[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt

  @@index([currencyId], map: "Budget_currencyId_fkey")
  @@index([tripId], map: "Budget_tripId_fkey")
}

model Expense {
  id        String   @id @default(uuid())
  category  String
  amount    Int
  usedAt    DateTime
  tripId    String
  budgetId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Budget    Budget   @relation(fields: [budgetId], references: [id])
  Trip      Trip     @relation(fields: [tripId], references: [id])

  @@index([budgetId], map: "Expense_budgetId_fkey")
  @@index([tripId], map: "Expense_tripId_fkey")
}

model Income {
  id           String   @id @default(uuid())
  amount       Int
  exchangeRate Int
  tripId       String
  budgetId     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Budget       Budget   @relation(fields: [budgetId], references: [id])
  Trip         Trip     @relation(fields: [tripId], references: [id])

  @@index([budgetId], map: "Expense_budgetId_fkey")
  @@index([tripId], map: "Expense_tripId_fkey")
}
