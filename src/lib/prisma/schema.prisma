generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id    String  @id @default(uuid())
  email String
  name String
  trips Trip[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Country {
  id      String  @id @default(uuid())
  name    String
  trips Trip[]
}

model Currency {
  id      String  @id @default(uuid())
  name    String
  budgets Budget[]
}

model Trip {
  id      String  @id @default(uuid())
  title    String
  startedAt DateTime
  endedAt DateTime

  budgets Budget[]
  expenses Expense[]

  User   User?  @relation(fields: [userId], references: [id])
  Country   Country?  @relation(fields: [countryId], references: [id])
  userId String
  countryId String
}

model Budget {
  id      String  @id @default(uuid())
  type    String
  amount Int

  expenses Expense[]

  Trip   Trip?  @relation(fields: [tripId], references: [id])
  Currency   Currency?  @relation(fields: [currencyId], references: [id])
  tripId String
  currencyId String
}


model Expense {
  id      String  @id @default(uuid())
  category    String
  amount Int
  usedAt DateTime

  Trip   Trip?  @relation(fields: [tripId], references: [id])
  Budget   Budget?  @relation(fields: [budgetId], references: [id])
  tripId String
  budgetId String
}
